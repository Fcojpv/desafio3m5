<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Series</h2>
    <%= link_to 'Nueva Serie', new_serie_path, class: 'btn btn-primary btn-sm' %>
  </div>

  <% if @series.any? %>
    <div class="list-group">
      <% @series.each do |serie| %>
        <div class="list-group-item">
          <h5 class="mb-1"><%= serie.name %></h5>
          <small class="text-muted">Director: <%= serie.director %></small>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No hay series registradas.</p>
  <% end %>
</div>
