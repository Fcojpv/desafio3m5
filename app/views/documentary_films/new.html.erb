<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="bg-dark p-3 rounded mb-4">
      <h1 class="text-white mb-0">Nuevo Documental</h1>
    </div>

    <%= form_with(model: @documentary_film, local: true) do |form| %>
      <% if @documentary_film.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@documentary_film.errors.count, "error") %> impidieron guardar este documental:</h2>
          <ul>
            <% @documentary_film.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, "Nombre", class: "form-label text-white" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :synopsis, "Sinopsis", class: "form-label text-white" %>
        <%= form.text_area :synopsis, class: "form-control", rows: 4 %>
      </div>

      <div class="mb-3">
        <%= form.label :director, "Director", class: "form-label text-white" %>
        <%= form.text_field :director, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.submit "Crear Documental", class: "btn btn-primary text-white" %>
        <%= link_to "Cancelar", documentary_films_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
